.w-visor
    position relative
    height: 660px;
    max-width: 620px;
    margin: auto;
    border: 4px solid #fff;
    text-align: center;
    border-left: 4px solid #e6e6e6;
    border-bottom: 2px solid #f5eeee;
    border-radius: 10px;
    box-shadow: inset 2px 2px 2px rgba(0,0,0,0.2), 0 0 10px rgba(0,0,0,0);
    background-color: #fffff9;
    margin-top: 0;
    h1 
        font-size: 200px

