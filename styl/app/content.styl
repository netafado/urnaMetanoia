.w-btns
    max-width 467px
    margin-top 40px
    display flex
    background-color #353333
    color white
    border-radius 5px
    justify-content center
    flex-wrap wrap
    box-shadow 2px 4px 2px darkgray
    padding 20px
    margin: auto
    padding-top 40px
    padding-bottom 40px
    border 2px solid black
    border-left 5px solid lighten(black, 15%)
    border-bottom 5px solid black
    border-top 1px solid #232222
    .btn-chamamento
        align-self center
        width 32%
        height 80px
        text-align center
        padding 5px
        margin-top 10px
        .clicavel
            border 1px solid black
            border-bottom 3px solid black
            cursor pointer
            background-color #272424
            border-radius: 5px
            &:active
                border-bottom 1px solid black
                box-shadow inset 4px 4px 10px rgba(0,0,0,0.8), 0 0 10px rgba(0,0,0,0)
                background-color #232222
            h4 
                margin 0
                padding 0
.btns-main
    border 1px solid black
    border-bottom 3px solid black
    cursor pointer
    background-color #272424
    border-radius: 2px
    color white
    padding: 10px 30px
    font-size: 20px
.confirmar
    border 1px solid darken(#0baf4c, 20%)
    background-color #0baf4c
    border-bottom 3px solid darken(#0baf4c, 50%)
    &:active
        border-bottom 1px solid black
        box-shadow inset 4px 4px 4px rgba(0,0,0,0.3), 0 0 10px rgba(0,0,0,0)
        background-color darken(#0baf4c, 20%)
[disabled]
    border 1px solid darken(gray, 20%)
    background-color gray
    border-bottom 3px solid darken(gray, 50%)
.corrigir
    border 1px solid darken(#ea5b0c, 20%)
    background-color #ea5b0c
    border-bottom 3px solid darken(#ea5b0c, 50%)
    &:active
        border-bottom 1px solid black
        box-shadow inset 4px 4px 4px rgba(0,0,0,0.3), 0 0 10px rgba(0,0,0,0)
        background-color darken(#ea5b0c, 20%)                

