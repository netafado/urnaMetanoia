.w-btns
    max-width 467px
    margin-top 40px
    display flex
    background-color #353333
    color white
    border-radius 5px
    justify-content center
    flex-wrap wrap
    box-shadow 2px 4px 2px darkgray
    padding 20px
    margin: auto
    padding-top 40px
    padding-bottom 40px
    border 2px solid black
    border-left 5px solid lighten(black, 15%)
    border-bottom 5px solid black
    border-top 1px solid #232222
    .btn-chamamento
        align-self center
        width 32%
        height 80px
        text-align center
        padding 5px
        margin-top 10px
        .clicavel
            border 1px solid black
            border-bottom 3px solid black
            cursor pointer
            background-color #272424
            border-radius: 5px
            &:active
                border-bottom 1px solid black
                box-shadow inset 4px 4px 10px rgba(0,0,0,0.8), 0 0 10px rgba(0,0,0,0)
                background-color #232222
            h4 
                margin 0
                padding 0
.btns-main
    border 1px solid black
    border-bottom 3px solid black
    cursor pointer
    background-color #272424
    border-radius: 2px
    color white
    padding: 10px 40px
    font-size: 20px
.confirmar
    border 1px solid darken(#0baf4c, 20%)
    background-color #0baf4c
    border-bottom 3px solid darken(#0baf4c, 50%)
    &:active
        border-bottom 1px solid black
        box-shadow inset 4px 4px 4px rgba(0,0,0,0.3), 0 0 10px rgba(0,0,0,0)
        background-color darken(#0baf4c, 20%)
.corrigir
    border 1px solid darken(#ea5b0c, 20%)
    background-color #ea5b0c
    border-bottom 3px solid darken(#ea5b0c, 50%)
    &:active
        border-bottom 1px solid black
        box-shadow inset 4px 4px 4px rgba(0,0,0,0.3), 0 0 10px rgba(0,0,0,0)
        background-color darken(#ea5b0c, 20%)                

.teclado
    padding: 20px;
    background-color: white;
    box-shadow: 1px 1px 2px #bfbebe
    button 
        width 48%

.w-visor
    max-width 320px
    margin: auto
    border 1px solid white
    text-align: center
    border-radius: 10px
    box-shadow: inset 4px 4px 2px rgba(0,0,0,0.2), 0 0 10px rgba(0,0,0,0)
    background-color: white
    margin-top 50px
    h1 
        font-size: 90px

@media screen and (max-width: $queries['medium'])
    .artigo-w
        .dia 
            font-size: 45px
    .artigo-textos
        padding-left: 20px              
        h4
            text-align: left
        p 
            text-align: left



        